<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="github_repository_tree" model="ir.ui.view">
        <field name="name">github.repository.tree</field>
        <field name="model">github.repository</field>
        <field name="inherit_id" ref="github_connector.view_github_repository_tree" />
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="project_id"/>
            </field>
        </field>
    </record>
    <record id="github_repository_search" model="ir.ui.view">
        <field name="name">github.repository.seach</field>
        <field name="model">github.repository</field>
        <field name="inherit_id" ref="github_connector.view_github_repository_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="project_id"/>
            </field>
            <xpath expr="//group[1]" position="inside">
                <filter
                        string="Project"
                        name="project"
                        context="{'group_by' : 'project_id'}"
                        />
            </xpath>
        </field>
    </record>
    <record id="github_repository_form" model="ir.ui.view">
        <field name="name">github.repository.form</field>
        <field name="model">github.repository</field>
        <field name="inherit_id" ref="github_connector.view_github_repository_form" />
        <field name="arch" type="xml">
            <field name="organization_id" position="after">
                <field name="project_id"/>
            </field>
        </field>
    </record>
</odoo>
