<odoo>
    <!-- Project -->
    <record id="project_project_1_demo" model="project.project">
        <field name="name">Apps store</field>
        <field name="sequence">10</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="type_ids"
               eval="[(4, ref('project.project_stage_0')),
                      (4, ref('project.project_stage_1')),
                      (4, ref('project.project_stage_2')),
                      (4, ref('project.project_stage_3'))]"/>
        <field name="privacy_visibility">employees</field>
        <field name="members"
               eval="[(4, ref('base.user_demo'))]"/>
        <field name="short_description">OCA Apps store module repository.</field>
        <field name="github_repository_ids"
               eval="[(4, ref('github_repository_6_demo'))]"/>
        <field name="description">
            Providing facility for displaying the module specific information in
            a standard Odoo e-commerce website (front-end) and download the zip
            file of the selected product.

            Contribute to OCA/apps-store development by creating an account on
            GitHub.
        </field>
        <field name="image"
               type="base64"
               file="oca_psc_team/static/src/img/project_apps_store.png"/>
    </record>

    <record id="project_project_2_demo" model="project.project">
        <field name="name">Project &amp; Services</field>
        <field name="sequence">10</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="type_ids"
               eval="[(4, ref('project.project_stage_0')),
                      (4, ref('project.project_stage_1')),
                      (4, ref('project.project_stage_2')),
                      (4, ref('project.project_stage_3'))]"/>
        <field name="privacy_visibility">employees</field>
        <field name="members"
               eval="[(4, ref('base.user_demo'))]"/>
        <field name="short_description">Find modules related to project &amp; services management.</field>
        <field name="description"><![CDATA[
            Find relevant modules for service business processes or companies.
            This project aims to extend Odoo on contract management features, such as:
            <ul>
                <li>Manage sold hours in advance</li>
                <li>Invoice on contract basis</li>
                <li>...</li>
            </ul>
            ]]>
        </field>
        <field name="github_repository_ids"
               eval="[(4, ref('github_repository_2_demo'))]"/>
        <field name="image"
               type="base64"
               file="oca_psc_team/static/src/img/project_services.png"/>
    </record>

    <record id="project_project_3_demo" model="project.project">
        <field name="name">Tools &amp; Administration</field>
